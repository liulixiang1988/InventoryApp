<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$PlaceholderFragment">
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_inv_in"
            android:id="@+id/btnInvIn" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:background="@drawable/button_custom"
            android:textColor="@android:color/white"
            android:layout_marginTop="90dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_inv_out"
            android:background="@drawable/button_custom"
            android:textColor="@android:color/white"
            android:id="@+id/btnInvOut" android:layout_below="@+id/btnInvIn" android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_split"
            android:background="@drawable/button_custom"
            android:textColor="@android:color/white"
            android:id="@+id/btnSplit" android:layout_below="@+id/btnInvOut" android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"/>
</RelativeLayout>
